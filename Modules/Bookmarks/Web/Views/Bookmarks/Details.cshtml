@using ReadLater.Bookmarks.Domain
@model BookmarkDto

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Bookmark</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Url)
        </dt>

        <dd>
            @Html.ActionLink(Model.Url, "GotoLink", "Bookmarks", new {id = Model.Id}, new {target ="_blank"})
        </dd>

    </dl>
    <dl class="dl-horizontal">
        <dt>
            Short url
        </dt>

        <dd>
            @Html.RouteLink(Url.Link("Goto", new { Controller = "Goto", id = Model.Id }), "goto",
            new {Controller = "Goto", id = Model.Id}, new {target ="_blank"})
        </dd>

    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>